{
  "name": "really-black-ui",
  "theme": "ui",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "repository": "https://github.com/matthewlucock/really-black-ui",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "scripts/main",
  "scripts": {
    "lint": "standard less.js | snazzy && standard \"scripts/**/*.js\" --global atom | snazzy",
    "build": "npm run lint && node less.js"
  },
  "configSchema": {
    "secondaryColor": {
      "title": "Secondary color",
      "type": "color",
      "default": "rgb(77, 77, 77)"
    },
    "mainFontSize": {
      "title": "Main font size",
      "type": "integer",
      "default": 16,
      "minimum": 0
    },
    "statusBarFontSize": {
      "title": "Status bar font size",
      "type": "string",
      "default": ".9em"
    },
    "styleTheEditor": {
      "title": "Style the editor",
      "type": "boolean",
      "default": true
    },
    "backgroundMode": {
      "type": "string",
      "enum": [
        "Solid color",
        "Image"
      ],
      "default": "Image"
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "fs-extra": "^5.0.0",
    "map-obj": "^2.0.0",
    "mem": "^3.0.0",
    "random-item": "^1.0.0"
  },
  "devDependencies": {
    "less": "^3.0.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  }
}
