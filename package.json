{
  "name": "pure-ui",
  "theme": "ui",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "repository": "https://github.com/matthewlucock/pure-atom",
  "license": "ISC",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "scripts/index",
  "scripts": {
    "lint": "standard \"scripts/**/*.js\" --global atom | snazzy && standard \"build/**/*.js\" \"styles/**/*.js\" | snazzy"
  },
  "configSchema": {
    "general": {
      "type": "object",
      "title": "General settings",
      "properties": {
        "background": {
          "type": "string",
          "title": "Background",
          "enum": [
            "Image",
            "Solid color"
          ],
          "description": "Customize your background image when the image background is selected with Packages > Pure > Background images, or the \"Pure: Background images\" command in the command palette.",
          "default": "Image",
          "order": 1
        },
        "fontFamily": {
          "type": "string",
          "title": "Font family",
          "default": "system-ui",
          "order": 2
        },
        "baseFontSize": {
          "type": "string",
          "title": "Base font size",
          "default": "15px",
          "order": 3
        },
        "statusBarFontSize": {
          "type": "string",
          "title": "Status bar font size",
          "default": ".9em",
          "order": 4
        },
        "scrollbarWidth": {
          "type": "string",
          "title": "Scrollbar width",
          "default": "10px",
          "order": 5
        },
        "settingsDelay": {
          "type": "boolean",
          "title": "Delay when changing some settings",
          "description": "Factor in a small, artificial delay when changing some settings. This can make changing some settings feel less responsive, but helps prevent awkward mishaps.",
          "default": true,
          "order": 6
        }
      }
    },
    "imageBackground": {
      "type": "object",
      "title": "Image background",
      "properties": {
        "workspaceAlpha": {
          "type": "number",
          "title": "Overlay alpha",
          "description": "The alpha channel of the dark overlay of the background image.",
          "default": 0.85,
          "minimum": 0,
          "maximum": 1,
          "order": 1
        },
        "accent": {
          "type": "color",
          "title": "Accent",
          "default": "white",
          "order": 2
        },
        "accentAlpha": {
          "type": "number",
          "title": "Accent alpha",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "order": 3
        },
        "selectNewImageOnActivation": {
          "type": "boolean",
          "title": "Select a new image on activation",
          "description": "Automatically select a new background image each time Atom loads.",
          "default": true,
          "order": 4
        },
        "selectNewImagesFrom": {
          "type": "string",
          "title": "Select new images from",
          "description": "The images to choose from when automatically selecting a new image. If you don't have any custom images, Pure will use the default images instead.",
          "enum": [
            "Custom images",
            "Default images",
            "Both"
          ],
          "default": "Custom images",
          "order": 5
        }
      }
    },
    "solidBackground": {
      "type": "object",
      "title": "Solid color background",
      "properties": {
        "workspaceColor": {
          "type": "color",
          "title": "Background",
          "default": "black",
          "order": 1
        },
        "accent": {
          "type": "color",
          "title": "Accent",
          "default": "rgb(77, 77, 77)",
          "order": 2
        },
        "adjustAccentAutomatically": {
          "type": "boolean",
          "title": "Adjust accent automatically",
          "description": "Automatically pick a new accent color when you change your background color.",
          "default": true,
          "order": 3
        }
      }
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "delay": "^3.0.0",
    "docrel": "^1.6.0",
    "fs-extra": "^5.0.0",
    "mem": "^3.0.1",
    "random-item": "^1.0.0"
  },
  "devDependencies": {
    "snazzy": "^7.1.1",
    "standard": "^10.0.3"
  }
}
