{
  "name": "pure-ui",
  "theme": "ui",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "repository": "https://github.com/matthewlucock/pure-ui",
  "license": "ISC",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "scripts/index",
  "scripts": {
    "lint": "standard \"scripts/**/*.js\" --global atom | snazzy && standard \"build/**/*.js\" \"styles/**/*.js\" | snazzy"
  },
  "configSchema": {
    "general": {
      "type": "object",
      "title": "General settings",
      "properties": {
        "backgroundMode": {
          "type": "string",
          "title": "Background mode",
          "enum": [
            "Solid color",
            "Image"
          ],
          "default": "Image"
        },
        "mainFontSize": {
          "type": "string",
          "title": "Main font size",
          "default": "15px"
        },
        "statusBarFontSize": {
          "type": "string",
          "title": "Status bar font size",
          "default": ".9em"
        },
        "fontFamily": {
          "type": "string",
          "title": "Font family",
          "default": "system-ui"
        },
        "scrollbarWidth": {
          "type": "string",
          "title": "Scrollbar width",
          "default": "10px"
        }
      }
    },
    "imageBackgrounds": {
      "type": "object",
      "title": "Image background settings",
      "properties": {
        "overlayAlphaChannel": {
          "type": "number",
          "title": "Overlay alpha channel",
          "order": 1,
          "default": 0.85,
          "minimum": 0,
          "maximum": 1
        },
        "accentColor": {
          "type": "color",
          "title": "Accent color",
          "order": 2,
          "default": "white"
        },
        "accentAlphaChannel": {
          "type": "number",
          "title": "Accent alpha channel",
          "order": 3,
          "default": 0.1,
          "minimum": 0,
          "maximum": 1
        },
        "selectNewImageOnActivation": {
          "type": "boolean",
          "title": "Select new image on activation",
          "order": 4,
          "default": true
        },
        "selectNewImagesFrom": {
          "type": "string",
          "title": "Select new images from",
          "enum": [
            "Default images",
            "Custom images",
            "Both"
          ],
          "order": 5,
          "default": "Default images"
        }
      }
    },
    "solidColorBackgrounds": {
      "type": "object",
      "title": "Solid color background settings",
      "properties": {
        "backgroundColor": {
          "type": "color",
          "title": "Background color",
          "order": 1,
          "default": "black"
        },
        "accentColor": {
          "type": "color",
          "title": "Accent color",
          "order": 2,
          "default": "rgb(51, 51, 51)"
        }
      }
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "docrel": "^1.6.0",
    "fs-extra": "^5.0.0",
    "mem": "^3.0.1",
    "random-item": "^1.0.0"
  },
  "devDependencies": {
    "snazzy": "^7.1.1",
    "standard": "^10.0.3"
  }
}
