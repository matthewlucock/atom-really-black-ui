{
  "name": "pure-ui",
  "theme": "ui",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "repository": "https://github.com/matthewlucock/pure-ui",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "scripts/main",
  "scripts": {
    "lint": "standard renderCustomisableStyles.js | snazzy && standard \"scripts/**/*.js\" --global atom | snazzy",
    "build": "npm run lint && node less.js"
  },
  "configSchema": {
    "general": {
      "type": "object",
      "title": "General settings",
      "properties": {
        "backgroundMode": {
          "type": "string",
          "title": "Background mode",
          "enum": [
            "Solid color",
            "Image"
          ],
          "default": "Image"
        },
        "mainFontSize": {
          "type": "string",
          "title": "Main font size",
          "default": "15px"
        },
        "statusBarFontSize": {
          "type": "string",
          "title": "Status bar font size",
          "default": ".9em"
        }
      }
    },
    "imageBackgrounds": {
      "type": "object",
      "title": "Image background settings",
      "properties": {
        "overlayAlphaChannel": {
          "type": "number",
          "title": "Overlay alpha channel",
          "order": 1,
          "default": 0.85,
          "minimum": 0,
          "maximum": 1
        },
        "accentColor": {
          "type": "color",
          "title": "Accent color",
          "order": 2,
          "default": "white"
        },
        "accentAlphaChannel": {
          "type": "number",
          "title": "Accent alpha channel",
          "order": 3,
          "default": 0.1,
          "minimum": 0,
          "maximum": 1
        },
        "selectNewImageOnActivation": {
          "type": "boolean",
          "title": "Select new image each time Atom loads",
          "order": 4,
          "default": true
        }
      }
    },
    "solidColorBackgrounds": {
      "type": "object",
      "title": "Solid color background settings",
      "properties": {
        "backgroundColor": {
          "type": "color",
          "title": "Background color",
          "order": 1,
          "default": "black"
        },
        "accentColor": {
          "type": "color",
          "title": "Accent color",
          "order": 2,
          "default": "rgb(77, 77, 77)"
        }
      }
    }
  },
  "dependencies": {
    "color": "^3.0.0",
    "fs-extra": "^5.0.0",
    "mem": "^3.0.1",
    "random-item": "^1.0.0"
  },
  "devDependencies": {
    "less": "^3.0.4",
    "snazzy": "^7.1.1",
    "standard": "^10.0.3"
  }
}
