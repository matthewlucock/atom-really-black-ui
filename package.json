{
  "name": "really-black-ui",
  "theme": "ui",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "repository": "https://github.com/matthewlucock/atom-really-black-ui",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "scripts/main",
  "scripts": {
    "build": "standard less.js | snazzy && standard scripts --global atom | snazzy && node less.js"
  },
  "configSchema": {
    "secondaryColor": {
      "title": "Secondary color",
      "type": "color",
      "default": "rgb(77, 77, 77)"
    },
    "mainFontSize": {
      "title": "Main font size",
      "type": "integer",
      "default": 16,
      "minimum": 0
    },
    "statusBarFontSize": {
      "title": "Status bar font size",
      "type": "string",
      "default": ".9em"
    },
    "styleTheEditor": {
      "title": "Style the editor",
      "type": "boolean",
      "default": true
    }
  },
  "dependencies": {
    "color": "^1.0.3",
    "fs-readfile-promise": "^3.0.0",
    "fs-writefile-promise": "^2.0.0",
    "map-assign": "^1.0.0"
  },
  "devDependencies": {
    "less": "^2.7.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  }
}
